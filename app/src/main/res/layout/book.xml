<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/recTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/abeezee"
            android:text="Client:"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#5A5959"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/recTitle"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/abeezee"
            android:text="Username"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#5A5959"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/CG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/recTitle"
            android:fontFamily="@font/abeezee"
            android:text="Caregiver:"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#5A5959"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/CGU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/CG"
            android:layout_below="@id/uname"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/abeezee"
            android:text="Username"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#5A5959"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/CG"
            android:fontFamily="@font/abeezee"
            android:text="Rate:"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#5A5959"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/rate"
            android:layout_below="@id/CGU"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/abeezee"
            android:text="50000"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#5A5959"
            android:textSize="18sp"
            android:textStyle="bold" />




        <!-- <TextView
             android:id="@+id/recDesc"
             android:layout_width="80dp"
             android:layout_height="30dp"
             android:layout_below="@id/recTitle"
             android:layout_marginStart="20dp"
             android:layout_marginTop="20dp"
             android:layout_toEndOf="@+id/recImage"
             android:fontFamily="@font/abeezee"
             android:maxLines="0"
             android:text="Description"
             android:textAppearance="@style/TextAppearance.AppCompat.Body2"
             android:textColor="#5A5959"
             android:textSize="8sp"
             android:textStyle="bold" />-->
    </RelativeLayout>

</androidx.cardview.widget.CardView>